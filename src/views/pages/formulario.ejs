<!DOCTYPE html>
<html lang="es">
<head>
  <%- include ../partials/header.ejs %>
</head>

<body>

    <div class="container ">
        <form  action="/form" method="post">
            <div class="form-group">
              <label for="inputEstudiante">Estudiante</label>
              <input type="text" class="form-control" id="inputEstudiante" name="Estudiante" placeholder="Estudiante">
            </div>
            <div class="form-group">
              <label for="inputDni">DNI</label>
              <input type="number" class="form-control" id="inputDni" name="Dni" placeholder="DNI">
            </div>
            <div class="form-group">
                <label for="inputAsignatura">Asignatura</label> 
              <input type="text" class="form-control" name="Asignatura" id="inputAsignatura">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>
<div style="background-color:#e5e5e5;text-align:center;padding:10px;margin-top:7px;"><%= new Intl.DateTimeFormat('es', { month: 'long', day: '2-digit',year: 'numeric'}).format(new Date()) %></div>
</body>
</html>


